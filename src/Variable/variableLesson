@@@ 01
import java.util.Scanner;

public class Variable.variableLesson {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.print("Insert student's name: ");
        String studentName = scanner.nextLine();
        System.out.print("Insert Math score: ");
        Double mathScore = scanner.nextDouble();
        System.out.print("Insert Khmer score: ");
        Double khmerScore = scanner.nextDouble();
        System.out.print("Insert English score: ");
        Double englishScore = scanner.nextDouble();
        Double avg = (mathScore + khmerScore + englishScore)/3;
        System.out.println("=".repeat(20));
        System.out.println("student's name: "+ studentName);
        System.out.println("Student's average: " + avg);
    }
}

@@@ 02
class User{
    public int id;
    public String name;
    public String email;
}
enum Status{
    FAILED,
    SUCCESS
}
public class Variable.variableLesson {
    public static void main(String[] args) {
        Status status = Status.SUCCESS;
        System.out.println(status);
        User user = new User();
        user.id = 12;
        user.name = "ze";
        user.email = "ze@gmail.com";
        System.out.println(user.name);
    }
}
@@@ 03
public class Variable.variableLesson {
    public static void main(String[] args) {
        //promotion (convert small data type to big data type)
        //Example :
        int avg = 2;
        double newAvg = avg;
        //casting (convert big data type to small data type)
        //Example :
        double price = 12.3;
        int singlePrice = (int) price;
//auto-boxing
        int primitive = 100;
        Integer newWrapper = primitive;
//unboxing
        Double doubleOfWrapper = 34.4;
        double primitiveDouble = doubleOfWrapper;
        System.out.println(newAvg + singlePrice + newWrapper + primitiveDouble);
    }
}

